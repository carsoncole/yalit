- if @user.errors.any?
  #error_explanation
    %h2= "#{pluralize(@user.errors.count, "error")} prohibited this section from being saved:"
    %ul
      - @user.errors.full_messages.each do |message|
        %li= message

.form-group
  = form.label :email
  = form.email_field :email, value: form.object.email, type: 'email', class: 'form-control'

.form-group
  = form.label :password
  = form.password_field :password, class: 'form-control'
