= form_for @server do |f|
  - if @server.errors.any?
    #error_explanation
      %h2= "#{pluralize(@server.errors.count, "error")} prohibited this section from being saved:"
      %ul
        - @server.errors.full_messages.each do |message|
          %li= messagew

  .form-group
    = f.label :url
    = f.text_field :url, class: 'form-control'

  .form-group
    = f.label :description
    = f.text_field :description, class: 'form-control'

  - if current_user.is_beta_user?
    .form-group
      = f.label :use_for_ping, "Use for Testing"
      = f.check_box :use_for_ping, class: 'form-control'

    .form-group
      = f.label :content_type_header
      = f.text_field :content_type_header, class: 'form-control'

    .form-group
      = f.label :authorization_header
      = f.text_field :authorization_header, class: 'form-control'

  .form-group
    = f.label :api_key, "API Key"
    = f.text_field :api_key, class: 'form-control'

  .row
    .col-md-6.offset-3
      .actions
        = f.submit 'Save', class: 'form-control btn btn-primary'