.row
  .col-md-8
    %h1.mb-2.text-center
      = @project.name
    %h5.mb-5.text-center
      = link_to "View", project_path(@project, view: true)
      \|
      = link_to "Schema", project_schema_path(@project)

    %h4#toggle-is-published
      - if @project.is_published
        = link_to project_toggle_is_published_path(@project), method: :post do
          = fa_icon "toggle-on"
          Published
      - else
        = link_to project_toggle_is_published_path(@project), method: :post do
          = fa_icon "toggle-off"
          Published

    = render 'details'
    = render 'users/users'
    = render 'invitations/send_invitation' if @project.admin_or_higher?(current_user)
    = render 'invitations/invitations' if @invitations.any?
  .col-md-4
    = render 'domain_status'