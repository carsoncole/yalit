%nav.nav.editing-nav
  - if controller_name == 'sub_section'
    = link_to "Edit chapter", edit_chapter_section_sub_section_path(@chapter, @section, @sub_section), class: 'nav-link'
  - elsif controller_name == 'section'
    = link_to "Edit chapter", edit_chapter_section_path(@chapter, @section), class: 'nav-link'
  - elsif controller_name == 'chapters'
    = link_to "Edit chapter", edit_chapter_path(@chapter), class: 'nav-link'

  = link_to "+ Chapter", new_chapter_path, class: 'nav-link'
  = link_to "+ Section", new_section_path, class: 'nav-link'
  = link_to "+ Sub-section", new_sub_section_path, class: 'nav-link'
  