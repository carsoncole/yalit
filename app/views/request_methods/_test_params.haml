.params
  .row
    .col-md-3
      %h4 Params

    .col-md-9
      .body
        %table.table.table-sm.mb-0.parameters
          %tr
            %th.name Name
            %th.type Type
            %th.description Description
          - request_method.parameters.order(:key).each do |param|
            %tr
              %td= param.key
              %td.type= param.field_type
              %td
                = param.description
                / # = Kramdown::Document.new(param.description).to_html.html_safe if param.description
                - if param.default_value.present?
                  Defaults to
                  %code= param.default_value
                - unless param.is_required?
                  = surround("(", ")") do
                    Optional
            / %tr
            /   %td= param.key
            /   %td.text-right= param.value
